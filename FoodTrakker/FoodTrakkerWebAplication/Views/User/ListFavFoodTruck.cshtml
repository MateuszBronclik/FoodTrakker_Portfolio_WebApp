@model IEnumerable<FoodTruckDto>
@{
	ViewData["Title"] = "ListFavFoodTruck";
}
<partial name="_NavbarPartial" />
<div class="container">
	<h2>My Favourites FoodTrucks!</h2>

	<table class="table">
		<thead>
			<tr>
				<th>
					<label asp-for="@Model.First().Name"></label>
				</th>
				<th>
					<label asp-for="@Model.First().Description"></label>
				</th>

				<th></th>
			</tr>
		</thead>
		<tbody>

			@foreach (var foodTruck in Model)
			{
				<tr>
					<td>
						<a asp-controller="FoodTrucks" asp-action="Details" asp-route-id="@foodTruck.Id" class="FTNameButton">@foodTruck.Name</a>
					</td>
					<td>
						@foodTruck.Description
					</td>
					<td>

						@Html.ActionLink("Remove from favourites!", "RemoveFoodTruckFromFavourites", new { id= foodTruck.Id })
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>

