@model IEnumerable<FoodTrakker.Core.Model.FoodTruck>

@{
    ViewData["Title"] = "Food Trucks";
}

<h1>Welcome to the world of mobile cuisine!</h1>

<div class="row container-fluid">
    @foreach (var item in Model)
    {
        <div class="col-md-3 col-sm-3 border-primary mb-3">
            <div class="card mb-3 FTCard" style="max-width: 340px;">
                <img src="~/img/eventList.png" class="card-img-top FTImage" alt="@item.Name">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text" style="min-height: 90px">@item.Description</p>
                    <p class="card-text" style="min-height: 50px">From: @item.Type</p>
                    <td>  @Html.ActionLink("More info", "Details", new {id = item.Id}, new {@class="text-dark btn FTButton FTCardbutton"})
                    </td>
                </div>
            </div>
        </div>
    }
    <div class="row">  
    <div class="col-md-12">  
        <div class="form-group">  
            @Html.Raw(@ViewBag.Alert)  
        </div>  
    </div>  
</div>  
</div>


