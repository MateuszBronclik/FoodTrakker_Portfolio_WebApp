@model FoodTruckDto

@{
	ViewData["Title"] = "DetailsFoodTruck";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="margin-left:50px " class="row">
	<div class="col-6">
		<dl class="row">
			<h1>@Model.Name</h1>
			<h4>Food Truck</h4>
			<dt class="col-sm-2">
				<label asp-for="@Model.Name"></label>
			</dt>
			<dd class="col-sm-10">
				@Model.Name
			</dd>
			<dt class="col-sm-2">
				<label asp-for="@Model.Type"></label>
			</dt>
			<dd class="col-sm-10">
				@Model.Type
			</dd>
			<dt class="col-sm-2">
				<label asp-for="@Model.Description"></label>
			</dt>
			<dd class="col-sm-10">
				@Model.Description
			</dd>
			<dt class="col-sm-2">
				<label asp-for="@Model.Location.ZIPCode"></label>
			</dt>
			<dd class="col-sm-10">
				@Model.Location.ZIPCode
			</dd>
			<dt class="col-sm-2">
				<label asp-for="@Model.Location.City"></label>
			</dt>
			<dd class="col-sm-10">
				@Model.Location.City
			</dd>
			<dt class="col-sm-2">
				<label asp-for="@Model.Location.Street"></label>
			</dt>
			<dd class="col-sm-10">
				@Model.Location.Street
			</dd>
		</dl>
		<a asp-controller="Owner" asp-action="EditFoodTruck" asp-route-id="@Model.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>
		<br></br>
		<h4>Reviews</h4>
		@await Component.InvokeAsync("FoodTruckReview", @Model.Id)
	</div>

	<div class="col-6">
		<div class="gmap_canvas">
			<iframe width="700" height="500" id="gmap_canvas" src="https://maps.google.com/maps?q=@Model.Location.City%20/@Model.Location.Street%20&t=&z=13&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0">
			</iframe><br><style>
							 .mapouter {
								 position: relative;
								 text-align: right;
								 height: 500px;
								 width: 700px;
								
							 }
							 .gmap_canvas {
								 overflow: hidden;
								 background: none !important;
								 height: 500px;
								 width: 700px;
							 }</style>
		</div>
	</div>
