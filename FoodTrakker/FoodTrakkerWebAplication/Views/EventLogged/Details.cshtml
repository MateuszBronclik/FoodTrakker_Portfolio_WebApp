@model FoodTrakker.Services.DTOs.EventDto


@{
	ViewData["Title"] = "Details";
}

<div class="container">

	<h1>Details</h1>

	<div>
		<h4>More information about @Model.Name</h4>
		<hr />
		<dl class="row">
			<dt class="col-sm-2">
				<label asp-for="Id"></label>
			</dt>
			<dd class="col-sm-10">
				@Model.Id
			</dd>
			<dt class="col-sm-2">
				<label asp-for="Name"></label>
			</dt>
			<dd class="col-sm-10">
				@Model.Name
			</dd>
			<dt class="col-sm-2">
				<label asp-for="Location"></label>
			</dt>
			<dd class="col-sm-10">
				@Model.Location
			</dd>
			<dt class="col-sm-2">
				<label asp-for="Description"></label>
			</dt>
			<dd class="col-sm-10">
				@Model.Description
			</dd>
			<dt class="col-sm-2">
				<label asp-for="StartDate"></label>
			</dt>
			<dd class="col-sm-10">
				@Model.StartDate
			</dd>
			<dt class="col-sm-2">
				<label asp-for="EndDate"></label>
			</dt>
			<dd class="col-sm-10">
				@Model.EndDate
			</dd>
			<h4>FoodTrucks present at the event!</h4>
			@await Component.InvokeAsync("EventWithFoodTrucks",@Model)
		</dl>
	</div>

	<div>

		<a asp-action="Index">Back to List</a>
	</div>
</div>
